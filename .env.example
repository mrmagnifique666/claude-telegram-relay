# Telegram Bot Token — get one from https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Comma-separated list of allowed Telegram user IDs (numbers).
# Find your ID via @userinfobot on Telegram.
TELEGRAM_ALLOWED_USERS=

# Directory for sandboxed file operations (relative or absolute)
SANDBOX_DIR=./sandbox

# Path to the Claude CLI binary (must be on PATH or provide full path)
# Windows: claude.exe   Linux/macOS: claude
CLAUDE_BIN=claude

# Comma-separated list of allowed tool names. Supports wildcards: notes.*, files.*
# Available: help, notes.*, files.*, web.fetch, shell.exec, system.*, code.*, api.*, db.*, telegram.*
CLAUDE_ALLOWED_TOOLS=help,notes.*,files.*,web.fetch,system.*,shell.exec,code.*,api.*,db.*,telegram.*

# Max conversation turns kept in memory per chat
MEMORY_TURNS=12

# Minimum milliseconds between messages per user
RATE_LIMIT_MS=2000

# Max tool chain steps (how many consecutive tool calls before stopping)
MAX_TOOL_CHAIN=5

# Shell command timeout in milliseconds
SHELL_TIMEOUT_MS=30000

# Code execution timeout in milliseconds (code.run skill)
CODE_TIMEOUT_MS=30000

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Directory for relay runtime files (lock file, uploads, etc.)
RELAY_DIR=./relay

# Admin passphrase — leave empty to disable admin mode
# Admin-only tools: shell.exec, system.kill, system.open, files.write_anywhere, files.read_anywhere
ADMIN_PASSPHRASE=

# ElevenLabs TTS — required for telegram.voice skill and voice calls
# Get an API key at https://elevenlabs.io
ELEVENLABS_API_KEY=
# Voice ID (default: Daniel — premade, works on free tier)
ELEVENLABS_VOICE_ID=onwK4e9ZLuTAKqWW03F9

# ── Voice / Phone Calls (Twilio + Deepgram) ──────────────────────
# Set to true to enable the voice server
VOICE_ENABLED=false
# HTTP + WebSocket port for Twilio webhooks
VOICE_PORT=3100
# Public URL (ngrok) — used in TwiML <Stream> tag
# Example: https://abc123.ngrok-free.app
VOICE_PUBLIC_URL=
# Twilio credentials
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# Deepgram STT — get a free API key at https://deepgram.com ($200 credit)
DEEPGRAM_API_KEY=
# Chat/user IDs for voice calls (reuses Telegram conversation context)
VOICE_CHAT_ID=0
VOICE_USER_ID=0
# Language for STT (Deepgram model language)
VOICE_LANGUAGE=fr
